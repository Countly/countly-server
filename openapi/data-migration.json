    "/o/datamigration/export_list": {
      "get": {
        "summary": "Get exports list",
        "description": "Get a list of all export jobs",
        "tags": [
          "Data Migration"
        ],
        "parameters": [
          {
            "name": "api_key",
            "in": "query",
            "required": false,
            "description": "API key",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "auth_token",
