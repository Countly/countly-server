        "checkJs": true,
        "resolveJsonModule": true,
        "strict": true,
        "noEmit": true,
        "allowImportingTsExtensions": true,
        "skipLibCheck": true,
        "target": "es2024",
        "module": "nodenext",
        "moduleResolution": "nodenext",
        "lib": ["es2024"],
