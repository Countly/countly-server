// to set it up, you need to add typescript:
// npm i typescript --save-dev
//
// to run the summary check, call:
// npx tsc
{
    "include": [
        "plugins/pluginManager.ts",
        "plugins/pluginManager.js",
        "plugins/push/**/*.ts",
        "plugins/push/**/*.js",
        "plugins/push_approver/**/*.ts",
        "plugins/push_approver/**/*.js",
        "api/lib/countly.common.js",
        "api/parts/data/geoData.ts",
        "api/aggregator.ts",
        "api/aggregator/usage.ts",
        "api/aggregator/processing.ts",
        "api/utils/common.js",
        "api/utils/localization.js",
        "api/utils/requestProcessor.js",
        "api/utils/taskmanager.js",
        "api/utils/authorizer.js"
    ],
    "exclude": [
        "node_modules/**/*.ts",
        "node_modules/**/*.js",
        "frontend/*",
        "plugins/**/frontend/**/*.ts",
        "plugins/**/frontend/**/*.js",
    ],
    "compilerOptions": {
        "outDir": "dist", // we're not building the app. but still necessary for, reasons...
        "allowJs": true,
        "checkJs": true,
        "resolveJsonModule": true,
        "strict": true,
        "noEmit": true,
        "allowImportingTsExtensions": true,
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "bundler"
    }
}
