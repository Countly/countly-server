    "exclude": [
        "node_modules/**/*.ts",
        "node_modules/**/*.js",
        "frontend/*",
        "plugins/**/frontend/**/*.ts",
        "plugins/**/frontend/**/*.js",
    ],
    "compilerOptions": {
        "outDir": "dist", // we're not building the app. but still necessary for, reasons...
        "allowJs": true,
        "checkJs": true,
        "resolveJsonModule": true,
        "strict": true,
        "noEmit": true,
        "allowImportingTsExtensions": true,
        "target": "es2024",
        "module": "nodenext",
        "moduleResolution": "nodenext",
        "lib": ["es2024"],
        // These help with CJS â†’ TS interop:
        "esModuleInterop": true,       // enables default imports from CJS modules
        "isolatedModules": true         // catches patterns that won't work at runtim
    }
}
