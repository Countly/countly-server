{
    "include": [
        "plugins/push/**/*.ts",
        "plugins/push/**/*.js",
        "plugins/push_approver/**/*.ts",
        "plugins/push_approver/**/*.js"
    ],
    "exclude": [
        "node_modules"
    ],
    "compilerOptions": {
        "outDir": "dist", // we're not building the app. but still necessary for, reasons...
        "allowJs": true,
        "checkJs": true,
        "resolveJsonModule": true,
        "strict": true
    }
}