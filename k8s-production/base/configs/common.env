# Global Common Configuration - applies to all services

# Node.js environment (not Countly config)
NODE_ENV=production

COUNTLY_CONFIG__FILESTORAGE=gridfs
COUNTLY_CONFIG__RELOADCONFIGAFTER=10000
COUNTLY_CONFIG__DRILL_EVENTS_DRIVER=clickhouse
COUNTLY_CONFIG__SHARED_CONNECTION=true
COUNTLY_CONFIG__PATH=""
COUNTLY_CONFIG__QUERYRUNNER_ADAPTERPREFERENCE=["clickhouse","mongodb"]
COUNTLY_CONFIG__QUERYRUNNER_ADAPTERS_MONGODB_ENABLED=true
COUNTLY_CONFIG__QUERYRUNNER_ADAPTERS_CLICKHOUSE_ENABLED=true