# OTLP Configuration for Countly Services

# Alloy endpoint (replaces OTEL Collector)
OTEL_EXPORTER_OTLP_ENDPOINT=http://alloy.countly-observability.svc.cluster.local:4318

# OpenTelemetry SDK Configuration
OTEL_ENABLED=true
OTEL_METRIC_EXPORT_INTERVAL_MILLIS=15000
OTEL_BATCH_TIMEOUT=10000
OTEL_MAX_QUEUE_SIZE=4096
OTEL_MAX_EXPORT_BATCH_SIZE=1024

# Pyroscope Profiling Configuration
PYROSCOPE_ENABLED=true
PYROSCOPE_SERVER=http://alloy.countly-observability.svc.cluster.local:9999
DEPLOYMENT_ENV=production

# Optional Debugging and Header Configuration
OTEL_DEBUG=false
OTEL_EXPORTER_OTLP_HEADERS=""
