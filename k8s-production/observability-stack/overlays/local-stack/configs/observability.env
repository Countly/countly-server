# Local Observability Stack Configuration
# Override external endpoints with local cluster services

# Prometheus Configuration (Local)
OTEL_EXPORTER_PROMETHEUS_ENDPOINT=http://prometheus.countly-observability.svc.cluster.local:9090
PROMETHEUS_REMOTE_WRITE_PATH=/api/v1/write
PROMETHEUS_REMOTE_READ_PATH=/api/v1/read

# Loki Configuration (Local)
OTEL_EXPORTER_LOKI_ENDPOINT=http://loki.countly-observability.svc.cluster.local:3100
LOKI_PUSH_PATH=/loki/api/v1/push
LOKI_TENANT_ID=countly

# Tempo Configuration (Local)
OTEL_EXPORTER_TEMPO_ENDPOINT=http://tempo.countly-observability.svc.cluster.local:4318
TEMPO_PROTOCOL=http/protobuf

# Grafana Configuration (Local)
GRAFANA_EXTERNAL_URL=http://grafana.countly-observability.svc.cluster.local:3000

# TLS Configuration for local (insecure)
OTEL_EXPORTER_TLS_INSECURE=true
OTEL_EXPORTER_TLS_VERIFY=false
OTEL_EXPORTER_TLS_CA_FILE=""
OTEL_EXPORTER_TLS_CERT_FILE=""
OTEL_EXPORTER_TLS_KEY_FILE=""

# Retry Configuration
OTEL_EXPORTER_RETRY_ENABLED=true
OTEL_EXPORTER_RETRY_INITIAL_INTERVAL=5s
OTEL_EXPORTER_RETRY_MAX_INTERVAL=30s
OTEL_EXPORTER_RETRY_MAX_ELAPSED_TIME=300s

# Timeout Configuration
OTEL_EXPORTER_TIMEOUT=30s

# Compression
OTEL_EXPORTER_COMPRESSION=gzip