# OpenTelemetry Collector Configuration

# Collector Deployment Settings
OTEL_COLLECTOR_REPLICAS=2
OTEL_COLLECTOR_CPU_REQUEST=500m
OTEL_COLLECTOR_CPU_LIMIT=2000m
OTEL_COLLECTOR_MEMORY_REQUEST=1Gi
OTEL_COLLECTOR_MEMORY_LIMIT=2Gi

# Collector Performance Settings
OTEL_METRIC_EXPORT_INTERVAL_MILLIS=15000
OTEL_BATCH_TIMEOUT_MS=5s
OTEL_BATCH_SEND_SIZE=1024
OTEL_MEMORY_LIMITER_CHECK_INTERVAL=5s
OTEL_MEMORY_LIMITER_LIMIT_MIB=2048
OTEL_MEMORY_LIMITER_SPIKE_LIMIT_MIB=512

# Logging Configuration
OTEL_LOG_LEVEL=info
OTEL_DEBUG_METRICS=false
OTEL_DEBUG_VERBOSITY=detailed

# Queue Settings
OTEL_QUEUE_ENABLED=true
OTEL_QUEUE_NUM_CONSUMERS=10
OTEL_QUEUE_QUEUE_SIZE=5000

# K8s Attributes
OTEL_K8S_NODE_NAME_FIELD_PATH=spec.nodeName
OTEL_K8S_POD_NAME_FIELD_PATH=metadata.name
OTEL_K8S_POD_NAMESPACE_FIELD_PATH=metadata.namespace
OTEL_K8S_POD_IP_FIELD_PATH=status.podIP
OTEL_K8S_POD_UID_FIELD_PATH=metadata.uid

# Resource Detection
OTEL_RESOURCE_DETECTORS=env,system,gcp,eks,azure
OTEL_RESOURCE_TIMEOUT=2s

# Service Configuration
OTEL_SERVICE_TELEMETRY_LOGS_LEVEL=info
OTEL_SERVICE_TELEMETRY_LOGS_ENCODING=json
OTEL_SERVICE_TELEMETRY_METRICS_LEVEL=detailed
OTEL_SERVICE_TELEMETRY_METRICS_ADDRESS=0.0.0.0:8888