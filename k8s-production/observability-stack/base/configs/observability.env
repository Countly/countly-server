# External Observability Endpoints Configuration
# These values should be configured for your external observability services

# Prometheus Configuration
OTEL_EXPORTER_PROMETHEUS_ENDPOINT=https://prometheus.example.com:9090
PROMETHEUS_REMOTE_WRITE_PATH=/api/v1/write
PROMETHEUS_REMOTE_READ_PATH=/api/v1/read

# Loki Configuration  
OTEL_EXPORTER_LOKI_ENDPOINT=https://loki.example.com:3100
LOKI_PUSH_PATH=/loki/api/v1/push
LOKI_TENANT_ID=tenant-id

# Tempo Configuration
OTEL_EXPORTER_TEMPO_ENDPOINT=https://tempo.example.com:4318
TEMPO_PROTOCOL=http/protobuf

# Grafana Configuration
GRAFANA_EXTERNAL_URL=https://grafana.example.com

# TLS Configuration
OTEL_EXPORTER_TLS_INSECURE="false"
OTEL_EXPORTER_TLS_VERIFY="true"
OTEL_EXPORTER_TLS_CA_FILE=""
OTEL_EXPORTER_TLS_CERT_FILE=""
OTEL_EXPORTER_TLS_KEY_FILE=""

# Retry Configuration
OTEL_EXPORTER_RETRY_ENABLED="true"
OTEL_EXPORTER_RETRY_INITIAL_INTERVAL=5s
OTEL_EXPORTER_RETRY_MAX_INTERVAL=30s
OTEL_EXPORTER_RETRY_MAX_ELAPSED_TIME=5m

# Timeout Configuration
OTEL_EXPORTER_TIMEOUT=30s

# Compression
OTEL_EXPORTER_COMPRESSION=gzip