# Production Environment Configuration  
# Override base common.env with production-specific settings

# Environment identification
NODE_ENV=production

# Production security settings
COUNTLY_CONFIG__DEBUG=false
COUNTLY_CONFIG__LOGGING_LEVEL=error

# Production hardening
COUNTLY_CONFIG__API_SAFE=true
COUNTLY_CONFIG__WEB_SECURE_COOKIES=true

COUNTLY_CONFIG__API_TIMEOUT=60000

# Production hostname (should be overridden with actual domain)
COUNTLY_CONFIG__HOSTNAME=countly.yourdomain.com