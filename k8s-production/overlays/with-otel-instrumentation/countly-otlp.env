# OTLP Configuration for Countly Services

# OTEL Collector endpoint
OTEL_EXPORTER_OTLP_ENDPOINT=http://otel-collector.countly-observability.svc.cluster.local:4318

# OpenTelemetry SDK Configuration
OTEL_ENABLED=true
OTEL_METRIC_EXPORT_INTERVAL_MILLIS=10000
OTEL_BATCH_TIMEOUT=5000
OTEL_MAX_QUEUE_SIZE=2048
OTEL_MAX_EXPORT_BATCH_SIZE=512

# Profiling Configuration (requires OTel Collector ≥ 0.130 and Pyroscope ≥ 1.7)
OTEL_PROFILING_ENABLED=true

# Optional Debugging and Header Configuration
OTEL_DEBUG=false
OTEL_EXPORTER_OTLP_HEADERS=""
